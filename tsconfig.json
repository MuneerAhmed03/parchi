{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "commonjs",                           
    "strict": true,                                
    "esModuleInterop": true,                       
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,      
    "outDir": "./dist",                            
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]                             
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
